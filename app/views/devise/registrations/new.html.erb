<%= stylesheet_link_tag "tutors_new" %>

<% if notice %>
  <%= render "notice_danger" %>
<% end %>

<%= form_for @tutee, :url => tutees_path do |form|%>
  <div class="row mt-4 center-form">

    <div class="form-row">
      <div>
          <h1 class="lead">Basic Info</h1>
      </div>
      <div>
        <div class="form-group">
          <%= form.label :first_name, class: 'required' %><br>
          <%= form.text_field :first_name, class: 'form-control ', placeholder: 'eg. Jane', :required => true, pattern: "[a-zA-ZA-z0-9À-ž.'- ]{1, }", oninput: "this.setCustomValidity('')", oninvalid: "this.setCustomValidity('Letters and Special Characters only')" %>
        </div>

        <div class="form-group">
          <%= form.label :last_name, class: 'required' %><br>
          <%= form.text_field :last_name, class: 'form-control ', placeholder: 'eg. Doe', :required => true, pattern: "[a-zA-ZA-z0-9À-ž.'- ]{1, }", oninput: "this.setCustomValidity('')", oninvalid: "this.setCustomValidity('Letters and Special Characters only')"%>
        </div>

        <div class="form-group">
          <%= form.label :email, class: 'required' %><br>
          <%= form.text_field :email, class: 'form-control ', placeholder: 'eg. oski@berkeley.edu', :required => true,  pattern: "[a-zA-Z0-9._%+-]+@berkeley\.edu$", oninput: "this.setCustomValidity('')" ,oninvalid: "this.setCustomValidity('Enter berkeley email only')" %>
        </div>

         <div class="form-group">
          <%= form.label :birthdate, class: 'required'%>
          <%= form.date_field :birthdate, class: 'form-control', :required => true, :placeholder => "MM/DD/YYYY" %>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div>
          <h1 class="lead">Password</h1>
      </div>

      <div>
        <div class="form-group">
            <%= form.label :pasword, 'Password (6 char. minimum)', class:'required'%><br>
            <%= form.password_field :password, autocomplete: "new-password", class: 'form-control', :required => true, :minlength => 6, :oninput => "this.setCustomValidity('')", :oninvalid => "this.setCustomValidity('Password must be at least 6 characters')"%>
        </div>  

        <div class="form-group">
          <%= form.label :password_confirmation, 'Confirm Password', class:'required'%><br>
          <%= form.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', :required => true, :oninput => "this.setCustomValidity('')", :oninvalid => "this.setCustomValidity('Password must be at least 6 characters')"%>
        </div>
      </div>
    </div>

    <div class="form-row">
      <div>
          <h1 class="lead">Demographic <br/> Info</h1>
      </div>
      <div> 
        <div class="form-group">
          <%= form.label :gender, class: 'required'%>
          <%= form.select :gender, options_for_select(['Male','Female','Non-Binary', 'Prefer not to say']), {:prompt=>"Select Gender"}, {class: 'form-control', :required => true} %>
        </div>

        <div class="form-group">
          <%= form.label :pronoun, "Pronouns", class: 'required'%>
          <%= form.select :pronoun, options_for_select(['he/his','she/her','they/their', 'Other']), {:prompt=>"Select Pronouns"}, {class: 'form-control', :required => true} %>
        </div>

        <div class="form-group">
          <%= form.label :ethnicity, class: 'required'%>
          <%= form.select :ethnicity, options_for_select(['Asian','Black/African','Caucasian', 'Hispanic/Latinx', 'Native American', 'Pacific Islander', 'Mixed', 'Other', 'Prefer not to say']), {:prompt=>"Select Pronouns"}, {class: 'form-control', :required => true} %>
        </div>

        <div class="form-group">
          <%= form.label :major, class: 'required' %>
          <%= form.select :major, options_for_select(['EECS','CS','other']), {:prompt=>"Select Major"}, {class: 'form-control', :required => true}%>
        </div> 

        <div class="form-group">
          <%= form.label :transfer?, "Are you a transfer student?", class: 'required' %>
          <%= form.select :transfer?,  options_for_select([true,false]), {:prompt=>"Select an Option"}, {class: 'form-control', :required => true}%>
        </div>  

        <div class="form-group">
          <%= form.label :dsp?, "Are you a DSP student?", class: 'required' %>
          <%= form.select :dsp?,  options_for_select([true,false]), {:prompt=>"Select an Option"}, {class: 'form-control', :required => true}%>
        </div>  
         
      </div>   
    </div>

    <div class="form-row">
      <div>
        <h1 class="lead">Academic Info</h1>
      </div>
      <div>

        <div class="form-group">
          <%= form.label :year, 'Years in School', class: 'required'%>
          <%= form.select :year, options_for_select(['1st', '2nd', '3rd', '4th', 'Other']), {:prompt=>"Select Year"}, {class: 'form-control', :required => true} %>
        </div>

        
        <div class="form-group">
          <%= form.label :privilige, 'For CS Scholars only. What CS Scholar Program Course?'%>
          <%= form.select :privilege, options_for_select(['No', 'cs61a', 'cs61b', 'cs61c', 'cs70']), {:prompt=>"Select Tutor Type"}, {class: 'form-control '} %>
        </div>

        <div class="form-group">
          <%= form.label :sid, class: 'required'%>
          <%= form.text_field :sid, class: 'form-control ', placeholder: 'eg. 12345678', :required => true,  pattern: "[0-9]+$", oninput: "this.setCustomValidity('')" ,oninvalid: "this.setCustomValidity('Numbers Only')"%>
        </div>

      </div>
    </div>

    <div style="width: 100%;">
        <%= link_to 'Back', new_tutee_session_path, class: 'btn btn-secondary text-light'%>
        <button type="submit" class="btn btn-success float-right">Create New Student</button>
    </div>
  </div>
<%end %>